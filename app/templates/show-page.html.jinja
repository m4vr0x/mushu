{% extends "page_layout.html.jinja" %}
{% block content %}

{% if log %}
  <div class="my-3 p-3 bg-secondary text-white rounded box-shadow">
    <h6 class="border-bottom border-white pb-2 mb-0">Message</h6>
      <p class="font-weight-normal pt-3">{{ log|safe }}</p>
  </div>
{% endif %}

  <div class="my-3 p-3 bg-white rounded box-shadow">
    <div class="border-bottom border-gray pb-2 mb-0">
      <h6 class="d-inline-block">{{show}}</h6>
      <form class="d-inline-block" action="/analyse_files" method="get">
          <button type="submit" class="d-inline-block btn-outline-secondary btn-sm">Analyse files</button>
      </form>
    </div>
    <p class="font-weight-normal pt-3">Season {{season}}</p>
    {% for episode in episode_list %}
      <small>{{ episode|safe }}</small>
    {% endfor %}
    {% for episode in episode_list %}
      <form{{ episode.episode_number }}
    {% endfor %}
    <small class="d-block text-right pt-2 mt-5">
      <a href="/">Homepage</a>
    </small>
  </div>
{% endblock %}
